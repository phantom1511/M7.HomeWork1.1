<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="TitleText" parent="BoldText">
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/sfprodisplay_bold</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="BoldText">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RegularText">
        <item name="android:fontFamily">@font/sfprodisplay_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorGrey</item>
    </style>

    <style name="RegularNumber">
        <item name="android:fontFamily">@font/sfprodisplay_regular</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="Spinner">
        <item name="android:layout_width">240sp</item>
        <item name="android:layout_height">48sp</item>
    </style>

    <style name="btnStart">
        <item name="android:layout_width">200sp</item>
        <item name="android:layout_height">48sp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:fontFamily">@font/sfprodisplay_regular</item>
        <item name="android:textSize">15sp</item>
    </style>

</resources>
