<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardElevation="4dp"
    android:layout_margin="20dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp">

        <TextView
            android:id="@+id/historyCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="Category: Mixed"
            style="@style/HistoryCategoryTextView"/>

        <TextView
            android:id="@+id/correctAnswer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/RegularText"
            android:text="Correct answer 8/10"
            app:layout_constraintTop_toBottomOf="@id/historyCategory"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="13dp"/>

        <TextView
            android:id="@+id/difficultyHistory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/RegularText"
            android:text="Difficulty: Easy"
            app:layout_constraintTop_toBottomOf="@id/correctAnswer"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="9dp"/>

        <ImageView
            android:id="@+id/historyDots"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_more"
            app:layout_constraintTop_toTopOf="@id/historyCategory"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/historyCategory"/>

        <TextView
            android:id="@+id/dateHistory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12 may 2019 20:32"
            style="@style/RegularText"
            android:textSize="9dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/difficultyHistory"/>



    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>